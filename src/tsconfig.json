{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./app",
        "jsx": "react"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 4,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true
    },
    "exclude": [],
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.{ts,tsx}",
        "!./src/typings/**/*.ts"
    ],
    "files": [
        "./Common/Header.tsx",
        "./Common/Templete.tsx",
        "./Component/Button/FacebookButton.tsx",
        "./Manager/Core/StorageManager.ts",
        "./Manager/FirebaseManager/config.ts",
        "./Manager/FirebaseManager/FirebaseManager.ts",
        "./Manager/Initializer/Initializer.ts",
        "./Manager/Login/LoginManager.ts",
        "./Manager/SettingManager/SettingData.ts",
        "./Manager/SettingManager/SettingManager.ts",
        "./Manager/SettingManager/UserData.ts",
        "./View/LoginView.tsx",
        "./View/MainScreen.tsx"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
